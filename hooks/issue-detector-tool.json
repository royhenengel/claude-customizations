{
  "description": "Detects errors in Bash tool output and prompts to run /fix",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/scripts/issue-detector-tool-hook.js",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
