{
  "description": "Detects issue language in user messages and prompts to run /fix",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/scripts/user-issue-hook.js",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
